<RoundedButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba:(0/255, 151/255, 167/255,1)if self.state == 'normal' else(180/255, 54/255, 0/255, 1)
        RoundedRectangle: 
            size: self.size
            pos: self.pos
            radius:[20,20,20,20]

