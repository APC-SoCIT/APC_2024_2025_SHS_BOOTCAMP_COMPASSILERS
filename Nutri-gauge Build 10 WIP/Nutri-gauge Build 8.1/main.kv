            input_filter: 'float'
        FocusTextInput:
            id: trans_fats_input
            hint_text: "Trans Fats"
            input_filter: 'float'
        FocusTextInput:
            id: cholesterol_input
            hint_text: "Cholesterol"
            input_filter: 'float'
        FocusTextInput:
            id: carbohydrates_input
            hint_text: "Carbohydrates"
            input_filter: 'float'
        FocusTextInput:
            id: fiber_input
            hint_text: "Fiber"
            input_filter: 'float'
        FocusTextInput:
            id: iron_input
            hint_text: "Iron"
            input_filter: 'float'
        FocusTextInput:
            id: sodium_input
            hint_text: "Sodium"
            input_filter: 'float'
