    #Position yourself at the very top of the app.
    pos_hint: {'top': 1}
    orientation: "vertical"
    background_normal: ""
    padding: 50
    spacing: 10
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (255/255, 111/255, 97/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [20,20,20,20]

        padding: 20
        spacing: 10

        Label:
            text: "Add Food to Today's Intake"
            bold: True
            size_hint_y: None
            height: "40dp"

        SelectFoodSpinner:
            id: food_spinner
            text: "Select food"
            values: root.food_options
            size_hint_y: None
            height: "40dp"

        Widget:  # Spacer
            size_hint_y: 1

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "40dp"
            spacing: 5

            RoundedButton:
                text: "Add Food"
                on_press: root.add_consumed_food()
                canvas.before:
                    Color:
                        rgba:(0/255, 151/255, 167/255,1)if self.state == 'normal' else(180/255, 54/255, 0/255, 1)
                    RoundedRectangle: 
                        size: self.size
                        pos: self.pos
                        radius:[20,20,20,20]

            RoundedButton:
                text: "Refresh Foods"
                on_press: root.refresh_food_options()
                canvas.before:
                    Color:
                        rgba:(0/255, 151/255, 167/255,1)if self.state == 'normal' else(180/255, 54/255, 0/255, 1)
                    RoundedRectangle: 
                        size: self.size
                        pos: self.pos
                        radius:[20,20,20,20]

            RoundedButton:
                text: "View Progress"
                on_press: app.root.ids.screen_manager.current = "progress_screen"
                canvas.before:
                    Color:
                        rgba:(0/255, 151/255, 167/255,1)if self.state == 'normal' else(180/255, 54/255, 0/255, 1)
                    RoundedRectangle: 
                        size: self.size
                        pos: self.pos
                        radius:[20,20,20,20]

            RoundedButton:
                text: "Today's Intake"
                on_release: root.show_todays_intake()
                canvas.before:
                    Color:
                        rgba:(0/255, 151/255, 167/255,1)if self.state == 'normal' else(180/255, 54/255, 0/255, 1)
